  <div class="card-div">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="<%= game.image_url %>">
          <a class="btn-floating right-fab waves-effect waves-light blue"><i class="material-icons">add</i></a>
          <a class="btn-floating left-fab waves-effect waves-light red"><i class="material-icons">favorite_border</i></a>
        </div>
        <div class="card-content">
          <span class="card-title"><%= link_to game.title, game_path(game) %></span>
          <p><%= game.description.slice(0, 100) + "... " %><%= link_to "VIEW MORE", game_path(game) %></p>
        </div>
      </div>
    </div>
</div>
