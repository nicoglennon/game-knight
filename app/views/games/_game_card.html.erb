  <div class="card-div">
    <div class="col s12 m6">
      <div class="card">
        <div class="card-image">
          <img src="<%= game.image_url %>">
          <%= form_for ownership do |f| %>
            <%= f.hidden_field(:game, value: game.id) %>
            <%= f.hidden_field(:path, value: Rails.application.routes.recognize_path(request.original_url)) %>
            <%= f.button('<i class="material-icons">add</i>'.html_safe,  class: "btn-floating right-fab waves-effect waves-light blue" ) %>
          <% end %>

          <%= form_for favoriting do |f| %>
            <%= f.hidden_field(:game, value: game.id) %>
            <%= f.hidden_field(:path, value: Rails.application.routes.recognize_path(request.original_url)) %>
            <%= f.button('<i class="material-icons">favorite_border</i></a>'.html_safe,  class: "btn-floating left-fab waves-effect waves-light red" ) %>
          <% end %>
        </div>
        <div class="card-content">
          <span class="card-title"><%= link_to game.title, game_path(game) %></span>
          <p><%= game.description.slice(0, 100) + "... " %><%= link_to "VIEW MORE", game_path(game) %></p>
        </div>
      </div>
    </div>
</div>
