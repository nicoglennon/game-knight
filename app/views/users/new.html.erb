<div class="form center card">
<h2>Register</h2>
  <%= form_for @user do |f|  %>

  <% if @errors %>
    <%= render 'layouts/errors' %>
  <% end %>

    <div class="row">
      <div class="input-field">
        <%= f.text_field :username, class: "input-sizing" %>
        <%= f.label "Username", class: "input-sizing" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <%= f.label "Email" %>
        <%= f.email_field :email, class: "input-sizing" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <%= f.label "Password" %>
        <%= f.password_field :password, class: "input-sizing" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <%= f.label "Confirm Password" %>
        <%= f.password_field :password_confirmation, class: "input-sizing" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <%= f.submit "Register", class: "ctr waves-effect waves-light btn" %>
      </div>
    </div>
  <% end %>
</div>



