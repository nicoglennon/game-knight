<div class="form center card">
<h2>Edit Your Profile</h2>
  <%= form_for(@user, multipart: true) do |f|  %>
    <div class="row">
      <div class="input-field">
        <%= f.text_field :username, class: "input-sizing" %>
        <%= f.label "Username" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <%= f.label "Bio" %><br>
        <%= f.text_area :bio, class: "materialize-textarea input-sizing" %>
      </div>
    </div>
    <div class="row">
      <div class="input-field">
        <%= f.submit "Edit Profile", class: 'btn'%><br>
      </div>
    </div>
  <% end %>
  </div>
