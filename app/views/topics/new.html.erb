<h1>New Topic</h1>

<div class="form">
  <%= form_for @topic, url: forum_topics_path(forum.id), class: "center" do |f|  %>
    <div class="input-field">
      <%= f.label "Title" %><br>
      <%= f.text_field :title, class: "input-sizing" %>
    </div>
    <div class="input-field">
      <%= f.label "Description" %><br>
      <%= f.text_area :description, class: "materialize-textarea" %>
    </div>
      <%= f.hidden_field :user_id, value: current_user.id %>
    <p class="submit-p">
      <%= f.submit "Create Topic", class: "waves-effect waves-light btn center" %>
    </p>
  <% end %>
</div>
