<h1><%= @forum.name %></h1>

<% for topic in @forum.topics %>
  <h3><%= link_to topic.title, forum_topic_path(@forum.id, topic.id) %></h3>
    <p class="details"><%= topic.posts.count %> Posts</p>
      <% if topic.posts.length > 0 %>
        <p class="details">Last Post <%= time_ago_in_words(topic.posts.last.created_at) %></p>
      <% end %>
    <p class="description"><%= topic.description %></p>
<% end %>

<%= link_to "New Topic", new_forum_topic_path(@forum), class: "ctr waves-effect waves-light btn" %>
